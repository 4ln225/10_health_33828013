<%- include('partials/header') %>

<h2>Add Goal</h2>

<% if (flash) { %>
  <div class="flash <%= flash.type %>"><%= flash.message %></div>
<% } %>

<form action="/goals/add" method="POST" class="form">

  <label>Title</label>
  <input type="text" name="title" required>

  <label>Target Value</label>
  <input type="number" name="target_value" required>

  <label>Unit</label>
  <input type="text" name="unit" placeholder="e.g. workouts, minutes" required>

  <label>Period</label>
  <select name="period" required>
    <option value="per day">Per Day</option>
    <option value="per week">Per Week</option>
    <option value="per month">Per Month</option>
  </select>

  <button type="submit" class="btn">Save Goal</button>
</form>

<%- include('partials/footer') %>
